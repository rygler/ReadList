<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/list_item_book_read_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp" />

        <TextView
            android:id="@+id/list_item_book_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/list_item_book_read_check_box"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Book Title"
            android:hint="@string/title_unknown"/>

        <TextView
            android:id="@+id/list_item_book_author_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_book_title_text_view"
            android:layout_toLeftOf="@id/list_item_book_read_check_box"
            android:padding="4dp"
            tools:text="Author Name"
            android:hint="@string/author_unknown" />

    </RelativeLayout>

</android.support.v7.widget.CardView>